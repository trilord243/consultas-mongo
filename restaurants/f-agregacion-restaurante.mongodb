use("sample_restaurants");

/* Encuentre de mayor a menor la cantidad de restaurantes por barrio (borough) que tienen al menos una calificaci√≥n de 'B'(grade) o superior. */

db.restaurants.aggregate([
  { $unwind: "$grades" },
  { $match: { "grades.grade": { $in: ["A", "B"] } } },
  { $group: { _id: "$borough", count: { $sum: 1 } } },
  { $sort: { count: -1 } },
]);
